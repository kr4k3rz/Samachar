<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:layout_scrollFlags="scroll">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="10dp"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp">

        <android.support.v7.widget.CardView
            android:id="@+id/cardviewImage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="2dp"
            android:foregroundGravity="center_vertical"
            app:cardUseCompatPadding="true">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:adjustViewBounds="true"
                android:background="@color/primary_light"
                android:contentDescription="@string/image_picture"
                android:cropToPadding="true"
                android:scaleType="centerCrop" />
        </android.support.v7.widget.CardView>


        <TextView
            android:id="@+id/title"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:layout_toEndOf="@+id/cardviewImage"
            android:layout_toRightOf="@+id/cardviewImage"
            android:text="Title"
            android:textAllCaps="true"
            android:textColor="@color/primary_text"
            android:textSize="16sp"
            android:textStyle="bold|normal"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/content_snippet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@+id/cardviewImage"
            android:layout_toRightOf="@+id/cardviewImage"
            android:text="code snippet"
            android:textColor="@color/secondary_text"
            android:textSize="14sp"
            tools:ignore="HardcodedText" />


        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@id/content_snippet"
            android:layout_marginTop="2dp"
            android:text="@string/date"
            android:textSize="10sp"
            tools:ignore="SmallSp" />

        <TextView
            android:id="@+id/source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/content_snippet"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@+id/cardviewImage"
            android:layout_toRightOf="@id/cardviewImage"
            android:text="source"
            android:textSize="10sp"
            tools:ignore="HardcodedText,MissingPrefix,SmallSp" />
    </RelativeLayout>

</android.support.v7.widget.CardView>

